@using Cervantes.CORE
@model Cervantes.Web.Areas.Workspace.Models.ChecklistCreateViewModel

@{
    ViewData["Title"] = "Create Checklist";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 localize-content><i class="fas fa-folder"></i> Create Task</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" localize-content>Home</a>
                    </li>
                    
                    <li class="breadcrumb-item" localize-content>
                        <a asp-area="" asp-controller="Workspaces" asp-action="Index" localize-content>Workspace</a>
                    </li>
                    
                    <li class="breadcrumb-item" localize-content>
                        <a asp-area="Workspace" asp-controller="Home" asp-action="Index" asp-route-project="@Model.Project.Id" localize-content>@Model.Project.Name</a>
                    </li>
                    <li class="breadcrumb-item" localize-content>
                        <a asp-area="Workspace" asp-controller="Checklist" asp-action="Index" asp-route-project="@Model.Project.Id" localize-content>Checklist</a>
                    </li>
                    
                    <li class="breadcrumb-item active" localize-content>Create</li>
                    
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
    <hr/>
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <form asp-area="Workspace" asp-controller="Checklist" asp-action="Create" method="post" asp-route-project="@Model.Project.Id" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        
                        <div class="form-group">
                            <label asp-for="TargetId" class="control-label" localize-content>Target</label>
                            @Html.DropDownListFor(m => m.TargetId, Model.TargetList, new {@class = "form-control targets"})
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Type" class="control-label" localize-content>Checklist Type</label>
                            @Html.DropDownListFor(model => model.Type, Html.GetEnumSelectList<Cervantes.CORE.ChecklistType>(), new {@class = "form-control"})
                            <span asp-validation-for="Type" class="text-danger"></span>

                        </div>
                        
                        <div class="form-group">
                            <a class="btn btn-default" asp-area="Workspace" asp-controller="Checklist" asp-action="Index" localize-content>Back</a>
                            <button type="submit" class="btn btn-dark" localize-content>Create</button>
                        
                        </div>
                        

                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles{
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet">

}
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/lib/theme/plugins/bs-customfile-input/bs-custom-file-input.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>

    <script>
    $(document).ready(function() {
            $('.targets').select2();
           
    });
  $(document).ready(function() {
      $('#description').summernote({
      height: 300,
      });
      });
    
   

         $(document).ready(function () {
  bsCustomFileInput.init();
});


         </script>
}
