@model Cervantes.Web.Areas.Workspace.Models.Wstg.WSTGViewModel

@using Cervantes.CORE
@{
    ViewData["Title"] = "OWASP WSTG Checklist";
}

@{
    if (TempData["editedWSTG"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <strong localize-content>WSTG Checklist saved successfully!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }
    
    if (TempData["errorSaveWSTG"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <strong localize-content>An error ocurred saving WSTG Checklist!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }
}

<section class="content-header" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 localize-content><i class="fas fa-list-ol"></i> OWASP WSTG Checklist</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" localize-content>Home</a>
                    </li>
                    <li class="breadcrumb-item" localize-content>
                        <a asp-area="" asp-controller="Workspaces" asp-action="Index" localize-content>Workspaces</a>
                    </li>
                    <li class="breadcrumb-item" localize-content>
                        <a asp-area="Workspace" asp-controller="Checklist" asp-action="Index" localize-content>Checklist</a>
                    </li>
                    <li class="breadcrumb-item active" localize-content>OWASP WSTG</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
    <hr/>
</section>

<!-- Main content -->
<section class="content">
    <div class="card card-dark card-tabs">
        <div class="card-header p-0 pt-1">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#info" data-toggle="pill">
                        <i class="fas fa-info-circle"></i> <span localize-content>Information Gathering</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#conf" data-toggle="pill">
                        <i class="fas fa-cog"></i> <span localize-content>Configuration and Deploy Management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#idnt" data-toggle="pill">
                        <i class="fas fa-id-badge"></i> <span localize-content>Identity Management</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#athn" data-toggle="pill">
                        <i class="fas fa-lock"></i> <span localize-content>Authentication</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#athz" data-toggle="pill">
                        <i class="fas fa-user-lock"></i> <span localize-content>Authorization</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#sess" data-toggle="pill">
                        <i class="fas fa-user"></i> <span localize-content>Session Management</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#inpv" data-toggle="pill">
                        <i class="fas fa-database"></i> <span localize-content>Data Validation</span>
                    </a>
                </li>


                <li class="nav-item">
                    <a class="nav-link" href="#errh" data-toggle="pill">
                        <i class="fas fa-exclamation-circle"></i> <span localize-content>Error Handling</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#cryp" data-toggle="pill">
                        <i class="fas fa-key"></i> <span localize-content>Cryptography</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#busl" data-toggle="pill">
                        <i class="fas fa-cogs"></i> <span localize-content>Business logic</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#clnt" data-toggle="pill">
                        <i class="fas fa-user-cog"></i> <span localize-content>Client Side</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#apit" data-toggle="pill">
                        <i class="fas fa-users-cog"></i> <span localize-content>API</span>
                    </a>
                </li>


            </ul>
        </div>
        <form asp-area="Workspace" asp-controller="Checklist" asp-action="Wstg" method="post" asp-route-project="@Model.Project.Id" asp-route-id="@Model.TargetId" enctype="multipart/form-data">
            <div class="card-body">
                <div class="tab-content">
                
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="TargetId">

                    <div class="active tab-pane" id="info">
                        <partial name="_WSTGInfo" model="Model"/>
                    </div>
                    <div class="tab-pane" id="conf">
                        <partial name="_WSTGConf" model="Model"/>

                    </div>

                    <div class="tab-pane" id="idnt">
                        <partial name="_WSTGIdnt" model="Model"/>

                    </div>

                    <div class="tab-pane" id="athn">
                        <partial name="_WSTGAuth" model="Model"/>
                    </div>
                    <div class="tab-pane" id="athz">
                        <partial name="_WSTGAthz" model="Model"/>

                    </div>
                    <div class="tab-pane" id="sess">
                        <partial name="_WSTGSess" model="Model"/>

                    </div>
                    <div class="tab-pane" id="inpv">
                        <partial name="_WSTGInpv" model="Model"/>
                    </div>
                    <div class="tab-pane" id="errh">
                        <partial name="_WSTGErrh" model="Model"/>
                    </div>
                    <div class="tab-pane" id="cryp">
                        <partial name="_WSTGCrypt" model="Model"/>
                    </div>
                    <div class="tab-pane" id="busl">
                        <partial name="_WSTGBusl" model="Model"/>

                    </div>
                    <div class="tab-pane" id="clnt">
                        <partial name="_WSTGClnt" model="Model"/>
                    </div>

                    <div class="tab-pane" id="apit">
                        <partial name="_WSTGApit" model="Model"/>
                    </div>

                </div>
        
            </div>
            <div class="form-group">
                <a class="btn btn-default" asp-area="Workspace" asp-controller="Checklist" asp-action="Index" localize-content>Back</a>
                <button type="submit" class="btn btn-dark" localize-content><i class="fas fa-save"></i> <span>Save</span></button>
        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#generateReport" localize-content>
                            <i class="fas fa-plus"></i> Generate Report
                        </button>
            </div>
        </form>
        
    </div>

    <div class="text-center">
        <a href="https://owasp.org/www-project-web-security-testing-guide/" target="_blank">Based on OWASP WSTG v4.2 Stable</a>
    </div>

</section>

<!-- Modal -->
<div class="modal fade" id="generateReport" tabindex="-1" role="dialog" aria-labelledby="generateReportLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="generateReportModalLabel">Generate Report</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-area="Workspace" asp-controller="Checklist" asp-action="GenerateReportWSTG" method="post" enctype="multipart/form-data">
                <input asp-for="Project.Id" type="hidden" id="project" name="project"/>
                <input asp-for="TargetId" type="hidden" id="target" name="target"/>
                <div class="modal-body">
                    <p>Are you sure you want to Generate a WSTG Report?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success" localize-content>Generate</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>

    $(document).ready(function () {
        $('#infot').DataTable({
            "responsive": true
        });
        $('#conft').DataTable({
                            "responsive": true
                        });
                $('#idntt').DataTable({
                            "responsive": true
                        });
                $('#athnt').DataTable({
                            "responsive": true
                        });
                $('#athzt').DataTable({
                            "responsive": true
                        });
                $('#sesst').DataTable({
                            "responsive": true
                        });
                $('#inpvt').DataTable({
                            "responsive": true
                        });
                $('#errht').DataTable({
                            "responsive": true
                        });
                $('#crypt').DataTable({
                            "responsive": true
                        });
                $('#buslt').DataTable({
                            "responsive": true
                        });
                $('#clntt').DataTable({
                            "responsive": true
                        });
                $('#apitt').DataTable({
                            "responsive": true
                        });
                $('.dataTables_length').addClass('bs-select');
    });


</script>
}