@model Cervantes.Web.Areas.Workspace.Models.ChecklistDeleteViewModel

@using Cervantes.CORE
@{
    ViewData["Title"] = "Checklist Delete";
}

<section class="content-header" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 localize-content><i class="fas fa-list-ol"></i> Checklist Delete</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" localize-content>Home</a>
                    </li>
                    <li class="breadcrumb-item" localize-content>
                        <a asp-area="" asp-controller="Workspaces" asp-action="Index" localize-content>Workspaces</a>
                    </li>
                    <li class="breadcrumb-item" localize-content>
                        <a asp-area="Workspace" asp-controller="Checklist" asp-action="Index" localize-content>Checklist</a>
                    </li>
                    <li class="breadcrumb-item active" localize-content>Delete</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
    <hr/>
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
            <div class="card-body">
                <h3 localize-content>Are you sure you want to delete this?</h3>
    
                <div>
    
                    <dl class="row">
                        <dt class="col-sm-2" localize-content>
                            Checklist Type
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Type)
                        </dd>
                        
                        <dt class="col-sm-2" localize-content>
                            Target
                        </dt>
                        @switch(Model.Type)
                        {
                            case ChecklistType.OWASPWSTG:
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Wstg.Target.Name)
                                </dd>
                                break;
                            case ChecklistType.OWASPMASVS:
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Mastg.Target.Name)
                                </dd>
                                break;
                            default:
                                <dd class="col-sm-10">
                                    No Data
                                </dd>
                                break;
                        }
                        
                        
                    </dl>
    
                    <form asp-area="Workspace" asp-controller="Checklist" asp-action="Delete" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Wstg.Id"/>
                        <input type="hidden" asp-for="Mastg.Id"/>
                        <input type="hidden" asp-for="Type"/>
                        <a class="btn btn-light" asp-action="Index" localize-content>Back</a>
                        <button type="submit" class="btn btn-outline-danger" localize-content>Delete</button>
                    </form>
                </div>
            </div>
        </div>

</section>

