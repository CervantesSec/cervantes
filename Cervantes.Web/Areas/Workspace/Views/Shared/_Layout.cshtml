              };
              
              if (darkMode === "enabled") {
                enableDarkMode(); // set state of darkMode on page load
              }
              function darkModeFunc() {
                  darkMode = localStorage.getItem("dark-mode");
                  if (darkMode === null)
                  {
                      if (darkMode === "disabled") {
