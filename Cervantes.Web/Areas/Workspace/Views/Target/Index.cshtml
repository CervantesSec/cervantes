@using System.Net
@using Cervantes.CORE
@model TargetViewModel

@{
    ViewData["Title"] = "Targets";
}
@{
    if (TempData["deleted"] != null)
    {
<div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>Target deleted successfully!</strong>
            
        </div>
    }

    if (TempData["addedTarget"] != null)
    {
        <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>Target created successfully!</strong>
            
        </div>
    }

    if (TempData["edited"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <strong localize-content>Target edited successfully!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }
    
    if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <strong localize-content>@TempData["error"].ToString()</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }
    
    if (TempData["editedService"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <strong localize-content>Target edited successfully!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }
    
    if (TempData["addedService"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <strong localize-content>Target edited successfully!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }
    
    if (TempData["deletedService"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <strong localize-content>Target edited successfully!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }

}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 localize-content><i class="fas fa-bullseye"></i> Targets</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item active" localize-content>Targets</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
      <hr />
    </section>

    <!-- Main content -->
    <section class="content">
        
<div class="card">
    <div class="card-body">

    
        <!--Table-->
        <table id="clientResults" class="table table-bordered table-hover" width="100%">
            <!--Table head-->
            <thead class="thead-dark">
                <tr>
                    <th><i class="fas fa-bullseye"></i> <span localize-content>Name</span></th>
                    <th><i class="fas fa-project-diagram"></i> <span localize-content>Type</span></th>
                    <th><i class="fas fa-align-left"></i> <span localize-content>Description</span></th>
                    <th><i class="fas fa-user"></i> <span localize-content>Added by</span></th>
                    <th><i class="fas fa-cog"></i> <span localize-content>Options</span></th>
                                                    
                </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>

                @foreach (var target in Model.Target)
                {
                    <tr>

                        <td>@target.Name</td>
                         @switch(@target.Type)
                                                                {
                                                                    case TargetType.IP:
                                                                        <td><span class="badge badge-success">@target.Type</span></td>
                                                                        break;
                                                                    case TargetType.Hostname:
                                                                         <td><span class="badge badge-secondary">@target.Type</span></td>
                                                                        break;
                                                                    case TargetType.CIDR:
                                                                        <td><span class="badge badge-light">@target.Type</span></td>
                                                                        break;
                                                                    case TargetType.URL:
                                                                        <td><span class="badge badge-info">@target.Type</span></td>
                                                                        break;
                                                                    case TargetType.Binary:
                                                                        <td><span class="badge badge-dark">@target.Type</span></td>
                                                                        break;
                                                                    default:
                                                                        <td><span class="badge badge-light">@target.Type</span></td>
                                                                        break;
                        
                                                                }
                        <td>@Html.Raw(@WebUtility.HtmlDecode(@target.Description))</td>
                        <td>@target.User.FullName</td>
                         @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                            {
                                <td>
                                    <a asp-area="Workspace" asp-controller="Target" asp-action="Details" asp-route-project="@Model.Project.Id" asp-route-id="@target.Id" class="btn btn-tool">
                                    <i class="fas fa-eye"></i>
                                 </a>
                                    <a class="btn btn-tool" asp-area="Workspace" asp-controller="Target" asp-action="Edit" asp-route-project="@Model.Project.Id" asp-route-id="@target.Id" localize-content><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-tool" asp-area="Workspace" asp-controller="Target" asp-action="Delete" asp-route-project="@Model.Project.Id" asp-route-id="@target.Id" localize-content ><i class="fas fa-trash"></i></a>
                                </td>

                            }
                             else{
                                   <a asp-area="Workspace" asp-controller="Target" asp-action="Service" asp-route-project="@Model.Project.Id" asp-route-id="@target.Id" class="btn btn-tool">
                                    <i class="fas fa-eye"></i>
                                 </a>
                            }
                    </tr>
                }

            </tbody>
            <!--Table body-->
        </table>
        <!--Table-->
        

        </div>
        </div>
    </section>
    <!-- /.content -->
  <!-- /.content-wrapper -->

  @section Scripts{
<script>

    $(document).ready(function () {
        $('#clientResults').DataTable({
            "responsive": true
        });
        $('.dataTables_length').addClass('bs-select');
    });


</script>
}








    





