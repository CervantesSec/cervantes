@model Cervantes.CORE.TargetServices

@{
    ViewData["Title"] = "Delete Target";
}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 localize-content><i class="fas fa-bullseye"></i> <span localize-content>Delete Service</span></h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item" localize-content><a asp-area="" asp-controller="Workspaces" asp-action="Index" localize-content>Workspaces</a></li>
                                          <li class="breadcrumb-item" localize-content><a asp-area="Workspace" asp-controller="Target" asp-action="Index" localize-content>Target</a></li>
                                          <li class="breadcrumb-item active" localize-content>Delete Service</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
      <hr />
    </section>
    
    <!-- Main content -->
    <section class="content">
         <div class="card">
    <div class="card-body">
<h3 localize-content>Are you sure you want to delete this?</h3>

<div>
 
    <dl class="row">
        <dt class = "col-sm-2" localize-content>
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2" localize-content>
            Version
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Version)
        </dd>
                <dt class = "col-sm-2" localize-content>
            Port
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Port)
        </dd>
                <dt class = "col-sm-2" localize-content>
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-area="Workspace" asp-controller="Target" asp-action="DeleteService" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
         <a class="btn btn-light" asp-action="Index" localize-content>Back</a>
        <button type="submit" class="btn btn-outline-danger" localize-content>Delete</button>
    </form>
</div>
</div>
</div>
</section>
