@using Cervantes.Web.Localization
@using Microsoft.Extensions.Localization
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject IStringLocalizer<Resource> localizer

@if (isDarkMode)
{
    <MudIconButton OnClick="ChangeTheme" Icon="@Icons.Material.Filled.LightMode">
    </MudIconButton>
}
else
{
    <MudIconButton OnClick="ChangeTheme" Icon="@Icons.Material.Filled.DarkMode" IconColor="Color.Dark">
    </MudIconButton>
}