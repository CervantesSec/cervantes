<MudMenu>
    <ActivatorContent>
        @switch (Culture.Name)
        {
            case "en-US" :
                <MudImage Src="img/english.png" Height="20" Width="20"/>
                break;
            case "es-ES":
                <MudImage Src="img/spain.png" Height="20" Width="20"/>
                break;
            case "pt-PT":
                <MudImage Src="img/spain.png" Height="20" Width="20"/>
                break;
        }
        
    </ActivatorContent>
    <ChildContent>
        <MudMenuItem @onclick="@((e) => CultureSet(supportedCultures[0]))"><MudImage Src="img/english.png" Height="15" Width="15"/> English</MudMenuItem>
        <MudMenuItem @onclick="@((e) => CultureSet(supportedCultures[1]))"><MudImage Src="img/spain.png" Height="15" Width="15"/> Español</MudMenuItem>
        <MudMenuItem @onclick="@((e) => CultureSet(supportedCultures[2]))"><MudImage Src="img/spain.png" Height="15" Width="15"/> @localizer["portuguese"]</MudMenuItem>

    </ChildContent>
</MudMenu>

