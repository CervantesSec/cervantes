@model Cervantes.CORE.Client

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 localize-content><i class="fas fa-briefcase"></i> Delete Client</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item"><a asp-controller="Client" asp-action="Index" localize-content>Home</a></li>
              <li class="breadcrumb-item active" localize-content>Delete</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
      <hr />
    </section>
    
    <!-- Main content -->
    <section class="content">
         <div class="card">
    <div class="card-body">
<h3 localize-content>Are you sure you want to delete this?</h3>

<div>
 
    <dl class="row">
        <dt class = "col-sm-2" localize-content>
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Url)
        </dd>
        <dt class = "col-sm-2" localize-content>
            Contact Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContactName)
        </dd>
        <dt class = "col-sm-2" localize-content>
            Contact Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContactEmail)
        </dd>
        <dt class = "col-sm-2" localize-content>
            Contact Phone
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContactPhone)
        </dd>
    </dl>
    
    <form asp-area="" asp-controller="Client" asp-action="Delete" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
         <a class="btn btn-light" asp-action="Index" localize-content>Back</a>
        <button type="submit" class="btn btn-outline-danger" localize-content>Delete</button>
    </form>
</div>
</div>
</div>
</section>