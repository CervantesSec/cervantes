@model Cervantes.Web.Models.ClientViewModel

@{
    ViewData["Title"] = "Create Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (TempData["fileNotPermitted"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>This file type is not permitted!</strong>

        </div>
    }
    
    if (TempData["errorCreateClient"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>An error ocurred creating a client!</strong>

        </div>
    }
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 localize-content><i class="fas fa-briefcase"></i> Create Client</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" localize-content>Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Client" asp-action="Index" localize-content>Client</a>
                    </li>
                    <li class="breadcrumb-item active" localize-content>Create</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
    <hr/>
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-body">

            <div class="row justify-content-center">
                <div class="col-md-12">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label" localize-content>Name</label>
                            <input asp-for="Name" class="form-control"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label" localize-content>Description</label>
                            <textarea id="description" asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Url" class="control-label">Url</label>
                            <input asp-for="Url" class="form-control" data-inputmask="'alias': 'url'"/>
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactName" class="control-label" localize-content>Contact Name</label>
                            <input asp-for="ContactName" class="form-control"/>
                            <span asp-validation-for="ContactName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactEmail" class="control-label" localize-content>Contact Email</label>
                            <input type="email" asp-for="ContactEmail" class="form-control"/>
                            <span asp-validation-for="ContactEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContactPhone" class="control-label" localize-content>Contact Phone</label>
                            <input asp-for="ContactPhone" class="form-control" data-inputmask="'mask': '(+099) 999 99 99 99 [9999]'" />
                            <span asp-validation-for="ContactPhone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="upload" localize-content>Select Image</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input  class="custom-file-input" asp-for="Upload" accept="image/bmp, image/gif, image/ico, image/jpeg, image/png, image/tiff">
                                    <label class="custom-file-label" for="upload" localize-content>Choose File</label>
                                </div>

                            </div>
                            <span asp-validation-for="Upload" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <a class="btn btn-default" asp-action="Index" localize-content>Back</a>
                            <button type="submit" class="btn btn-dark" localize-content>Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</section>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/lib/theme/plugins/bs-customfile-input/bs-custom-file-input.min.js"></script>
    <script src="~/lib/inputmask/jquery.inputmask.min.js"></script>
        <script src="~/lib/inputmask/bindings/inputmask.binding.js"></script>
    <script>
    
    $(document).ready(function() {
      $('#description').summernote({
      height: 300,
      });
      });
    
   
    
    $(document).ready(function () {
      bsCustomFileInput.init();
    });
         </script>
}