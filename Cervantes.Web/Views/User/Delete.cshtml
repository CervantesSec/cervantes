@model Cervantes.Web.Models.UserViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><i class="fas fa-user"></i> <span localize-content>Delete User</span></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" localize-content>Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Client" asp-action="Index" localize-content>User</a>
                    </li>
                    <li class="breadcrumb-item active" localize-content>Delete</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
    <hr/>
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-body">
            <h3 localize-content>Are you sure you want to delete this?</h3>

            <div>

                <dl class="row">
                    <dt class="col-sm-2" localize-content>
                        Full Name
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FullName)
                    </dd>
                    <dt class="col-sm-2" localize-content>
                        Username
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserName)
                    </dd>
                    <dt class="col-sm-2" localize-content>
                        Email
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-2" localize-content>
                        Description
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2" localize-content>
                        Position
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Position)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id"/>
                    <a class="btn btn-light" asp-action="Index" localize-content>Back</a>
                    <button type="submit" class="btn btn-outline-danger" localize-content>Delete</button>
                </form>
            </div>
        </div>
    </div>
</section>