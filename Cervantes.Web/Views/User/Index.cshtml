@model IEnumerable<Cervantes.Web.Models.UserViewModel>

@{
    ViewData["Title"] = "Users";
}
@{
    if (TempData["userDeleted"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>User deleted successfully!</strong>

        </div>
    }
    
    if (TempData["errorUserDeleted"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>An error ocurred deleting a user!</strong>

        </div>
    }

    if (TempData["userCreated"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong localize-content>User created successfully!</strong>

        </div>
    }
    

    if (TempData["userEdited"] != null)
    {
        <div class="alert alert-success alert-dismissible">
            <strong localize-content>User edited successfully!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }
    
    if (TempData["errorUserEdited"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <strong localize-content>An error ocurred editing a user!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }

   

    if (TempData["errorLoading"] != null)
    {
        <div class="alert alert-danger alert-dismissible">
            <strong localize-content>Error loading Users!</strong>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        </div>
    }


}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    <i class="fas fa-user"></i> <span localize-content>Users</span>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" localize-content>Home</a>
                    </li>
                    <li class="breadcrumb-item active" localize-content>Clients</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
    <hr/>
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-body">

            @if (Model.FirstOrDefault() != null)
            {
                <!--Table-->
                <table id="clientResults" class="table table-bordered table-hover" width="100%">
                    <!--Table head-->
                    <thead class="thead-dark">
                    <tr>
                        <th>
                            <i class="fas fa-address-book"></i> <span localize-content>Full Name</span>
                        </th>
                        <th>
                            <i class="fas fa-at"></i> <span localize-content>Email</span>
                        </th>
                        <th>
                            <i class="fas fa-at"></i> <span localize-content>Position</span>
                        </th>
                        
                        <th>
                            <i class="fas fa-lock"></i> <span localize-content>Locked Out</span>
                        </th>

                        <th>
                            <i class="fas fa-check-double"></i> <span localize-content>2FA Enabled</span>
                        </th>
                        <th>
                            <i class="fas fa-cog"></i> <span localize-content>Options</span>
                        </th>

                    </tr>
                    </thead>
                    <!--Table head-->
                    <!--Table body-->
                    <tbody>

                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>
                                @user.Email
                            </td>
                            <td>
                                @user.Position
                            </td>
                            
                            
                            @switch (@user.LockoutEnabled)
                            {
                                case false:

                                    <td>
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times-circle"></i>
                                        </span>
                                    </td>
                                    break;
                                case true:
                                    <td>
                                        <span class="badge badge-success">
                                            <i class="fas fa-check-circle"></i>
                                        </span>
                                    </td>
                                    break;
                            }
                            

                            @switch (@user.TwoFactorEnabled)
                            {
                                case false:

                                    <td>
                                        <span class="badge badge-danger">
                                            <i class="fas fa-times-circle"></i>
                                        </span>
                                    </td>
                                    break;
                                case true:
                                    <td>
                                        <span class="badge badge-success">
                                            <i class="fas fa-check-circle"></i>
                                        </span>
                                    </td>
                                    break;
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                            {
                                <td>
                                    <a class="btn btn-tool" asp-controller="User" asp-action="Details" asp-route-id="@user.Id" localize-content>
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a class="btn btn-tool" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" localize-content>
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-tool" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" localize-content>
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            }

                        </tr>
                    }

                    </tbody>
                    <!--Table body-->
                </table>
                <!--Table-->
            }
        </div>
    </div>
    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-light"><i class="fas fa-arrow-left"></i> <span localize-content>Back</span></a>
    <a asp-area="" asp-controller="User" asp-action="Create" class="btn btn-dark"><i class="fas fa-user"></i> <span localize-content>Create</span></a>
</section>
<!-- /.content -->
<!-- /.content-wrapper -->

@section Scripts{
    <script>

    $(document).ready(function () {
        $('#clientResults').DataTable({
            "responsive": true
        });
        $('.dataTables_length').addClass('bs-select');
    });


</script>
}