@{
    ViewData["Title"] = "Error";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 localize-content>
                    <i class="fas fa-bomb"></i> <span localize-content>Error</span>
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" localize-content>Home</a>
                    </li>
                    <li class="breadcrumb-item active" localize-content>Error</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
    <hr/>
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-body">
            <div class="error-page">
                <h2 class="headline text-danger"><i class="fas fa-exclamation-triangle text-danger"></i></h2>
                <div class="error-content">
                    <h3>Oops! Something went wrong.</h3>
                    <p>
                        We will work on fixing that right away.
                        Meanwhile, you may <a asp-area="" asp-controller="Home" asp-action="Index">return to dashboard</a>
                    </p>

                </div>
            </div>


        </div>
    </div>
</section>
<!-- /.content -->
<!-- /.content-wrapper -->